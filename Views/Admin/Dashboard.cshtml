@model FixItNepal.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid bg-light py-4">
    <div class="row">
        <!-- Sidebar could go here, but for now we keep it top-nav based -->
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-primary-custom fw-bold">Dashboard Overview</h2>
                    <p class="text-secondary">Welcome back, Administrator. Real-time platform insights.</p>
                </div>
                <div>
                    <a href="#" class="btn btn-primary rounded-pill"><i class="bi bi-download me-2"></i>Generate Report</a>
                </div>
            </div>

            <!-- Stats Row -->
            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 bg-white">
                        <div class="card-body p-4 d-flex align-items-center">
                            <div class="rounded-circle bg-primary-subtle p-3 me-3 text-primary">
                                <i class="bi bi-people-fill fs-3"></i>
                            </div>
                            <div>
                                <h6 class="text-muted text-uppercase small fw-bold mb-1">Total Users</h6>
                                <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 bg-white">
                        <div class="card-body p-4 d-flex align-items-center">
                            <div class="rounded-circle bg-success-subtle p-3 me-3 text-success">
                                <i class="bi bi-hammer fs-3"></i>
                            </div>
                            <div>
                                <h6 class="text-muted text-uppercase small fw-bold mb-1">Active Providers</h6>
                                <h3 class="fw-bold mb-0">@Model.ActiveProviders</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 bg-white">
                        <div class="card-body p-4 d-flex align-items-center">
                            <div class="rounded-circle bg-warning-subtle p-3 me-3 text-warning">
                                <i class="bi bi-hourglass-split fs-3"></i>
                            </div>
                            <div>
                                <h6 class="text-muted text-uppercase small fw-bold mb-1">Pending Requests</h6>
                                <h3 class="fw-bold mb-0">@Model.PendingProviders</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Removed Revenue Card as requested -->
            </div>

            <!-- Action Cards -->
            <h4 class="fw-bold text-secondary mb-3">Quick Actions</h4>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 hover-card transition-all">
                        <div class="card-body p-4 text-center">
                            <div class="mb-3">
                                <i class="bi bi-person-check-fill fs-1 text-primary"></i>
                            </div>
                            <h5 class="card-title fw-bold">Verify Providers</h5>
                            <p class="card-text text-secondary small mb-4">Review and approve new service provider applications and documents.</p>
                            <a asp-action="VerifyProviders" class="btn btn-outline-primary rounded-pill px-4 stretched-link">Go to Verification</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 hover-card transition-all">
                        <div class="card-body p-4 text-center">
                            <div class="mb-3">
                                <i class="bi bi-tags-fill fs-1 text-primary"></i>
                            </div>
                            <h5 class="card-title fw-bold">Manage Services</h5>
                            <p class="card-text text-secondary small mb-4">Create new services, update prices, and manage categories.</p>
                            <a asp-controller="Service" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 stretched-link">Manage Catalog</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100 hover-card transition-all">
                        <div class="card-body p-4 text-center">
                             <div class="mb-3">
                                <i class="bi bi-shield-lock-fill fs-1 text-primary"></i>
                            </div>
                            <h5 class="card-title fw-bold">User Management</h5>
                            <p class="card-text text-secondary small mb-4">Manage customer accounts, roles, permission and account status.</p>
                            <a asp-action="UserManagement" class="btn btn-outline-primary rounded-pill px-4 stretched-link">Manage Users</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Activity Table -->
             <div class="card border-0 shadow-sm mt-5">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold">Recent System Activity</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">User</th>
                                    <th>Action</th>
                                    <th>Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivities.Any())
                                {
                                    @foreach (var activity in Model.RecentActivities)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded-circle p-1 me-2"><i class="bi bi-person"></i></div>
                                                    <strong>@activity.UserName</strong>
                                                </div>
                                            </td>
                                            <td>@activity.Action</td>
                                            <td class="text-muted">@activity.TimeAgo</td>
                                            <td><span class="badge @activity.StatusColor rounded-pill">@activity.StatusText</span></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">No recent activity.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
