@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="text-center mt-5">
    <h1 class="text-primary">Admin Dashboard</h1>
    <p>Manage users, verify service providers, monitor bookings, and generate reports.</p>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card p-3 text-center">
                <h5>Users</h5>
                <p>Manage all platform users</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 text-center">
                <h5>Providers</h5>
                <p>Verify new service providers</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 text-center">
                <h5>Bookings</h5>
                <p>View all bookings & disputes</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 text-center">
                <h5>Reports</h5>
                <p>Analytics & revenue</p>
            </div>
        </div>
    </div>
</div>
