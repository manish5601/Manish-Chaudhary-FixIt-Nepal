@model IEnumerable<FixItNepal.ViewModels.UserManagementViewModel>
@{
    ViewData["Title"] = "User Management";
    var currentRole = ViewBag.CurrentRole as string;
    var currentSearch = ViewBag.CurrentSearch as string;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary-custom fw-bold">User Management</h2>
        
        <form method="get" class="d-flex gap-2">
            <select name="role" class="form-select w-auto" onchange="this.form.submit()">
                <option value="">All Roles</option> 
                <!option value="Customer" @(currentRole == "Customer" ? "selected" : "")>Customer</!option>
                <!option value="ServiceProvider" @(currentRole == "ServiceProvider" ? "selected" : "")>Provider</!option>
                <!option value="Admin" @(currentRole == "Admin" ? "selected" : "")>Admin</!option>
            </select>
            <input type="text" name="search" class="form-control" placeholder="Search name/email..." value="@currentSearch">
            <button type="submit" class="btn btn-outline-primary"><i class="bi bi-search"></i></button>
            @if(!string.IsNullOrEmpty(currentSearch) || !string.IsNullOrEmpty(currentRole))
            {
                <a asp-action="UserManagement" class="btn btn-outline-secondary" title="Clear Filters"><i class="bi bi-x-lg"></i></a>
            }
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">User</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                            {
                                                <img src="~/uploads/profiles/@user.ProfilePicture" class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                    <span class="fw-bold text-secondary">@user.FullName?.Substring(0, 1).ToUpper()</span>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">@user.FullName</div>
                                                <div class="small text-muted">@user.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @(user.Role.Contains("Admin") ? "bg-danger" : user.Role.Contains("Provider") ? "bg-info" : "bg-primary") bg-opacity-75 rounded-pill">
                                            @user.Role
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success-subtle text-success rounded-pill">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary rounded-pill">Inactive</span>
                                        }

                                        @if (!string.IsNullOrEmpty(user.ProviderStatus))
                                        {
                                             <div class="mt-1">
                                                 @if (user.ProviderStatus == "Approved")
                                                 {
                                                     <span class="badge bg-success" style="font-size: 0.7em;">Verified</span>
                                                 }
                                                 else if (user.ProviderStatus == "Pending")
                                                 {
                                                     <span class="badge bg-warning text-dark" style="font-size: 0.7em;">Pending</span>
                                                 }
                                                 else
                                                 {
                                                     <span class="badge bg-danger" style="font-size: 0.7em;">Rejected</span>
                                                 }
                                             </div>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <form asp-action="ToggleUserStatus" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                @if (user.IsActive)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Deactivate">
                                                        <i class="bi bi-slash-circle"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Activate">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                }
                                            </form>

                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@user.Id', '@user.FullName')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-person-x fs-1 d-block mb-3"></i>
                                    No users found matching your search.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Global Delete Modal (Moved outside table to prevent blinking/overlay issues) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-start text-wrap">
                Are you sure you want to permanently delete <strong id="deleteUserName"></strong>?<br/>
                <small class="text-danger">This action cannot be undone.</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteUser" method="post">
                    <input type="hidden" id="deleteUserId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete User</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ensure options in select work despite possible HTML escaping in example
        document.querySelectorAll('option').forEach(o => {
            if (o.innerText.startsWith('<!')) o.innerHTML = o.innerText.replace('<!', '<').replace('>', '>');
        });

        // Function to handle delete modal
        function confirmDelete(userId, userName) {
            document.getElementById('deleteUserId').value = userId;
            document.getElementById('deleteUserName').textContent = userName;
            var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            myModal.show();
        }
    </script>
}
