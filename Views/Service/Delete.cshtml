@model FixItNepal.Models.ServiceItem

@{
    ViewData["Title"] = "Delete Service";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 border-danger border-start border-4">
        <div class="card-body p-4">
            <h3 class="text-danger mb-4">Are you sure you want to delete this service?</h3>
            
            <dl class="row">
                <dt class="col-sm-3 text-secondary">Service Name</dt>
                <dd class="col-sm-9 fw-bold">@Model.Name</dd>

                <dt class="col-sm-3 text-secondary">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 text-secondary">Price</dt>
                <dd class="col-sm-9">NPR @Model.BasePrice</dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete Service</button>
                <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none">Cancel</a>
            </form>
        </div>
    </div>
</div>
