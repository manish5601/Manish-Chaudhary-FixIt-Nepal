@model FixItNepal.ViewModels.ServiceItemViewModel

@{
    ViewData["Title"] = "Add Service";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-3">
                    <h4 class="mb-0 fw-bold">Add New Service</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-4 text-center">
                            <label asp-for="ImageFile" class="form-label d-block fw-bold text-secondary">Service Image</label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label text-secondary small fw-bold"></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g. Deep Cleaning" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ServiceCategoryId" class="form-label text-secondary small fw-bold"></label>
                                <select asp-for="ServiceCategoryId" class="form-select" asp-items="Model.Categories"></select>
                                <span asp-validation-for="ServiceCategoryId" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label text-secondary small fw-bold"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                             <div class="col-md-6">
                                <label asp-for="BasePrice" class="form-label text-secondary small fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">NPR</span>
                                    <input asp-for="BasePrice" class="form-control" />
                                </div>
                                <span asp-validation-for="BasePrice" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 d-flex align-items-end">
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                    <label class="form-check-label" asp-for="IsActive">Active Service</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Create Service</button>
                            <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
