@model FixItNepal.Models.ServiceCategory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white border-0 py-3">
                     <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Category</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <h5 class="mb-3">Are you sure you want to delete this category?</h5>
                    <p class="text-muted mb-4">You are about to delete <strong>@Model.Name</strong>. This action cannot be undone.</p>
                    
                    <div class="p-3 bg-light rounded mb-4 text-start">
                         <dl class="row mb-0">
                            <dt class = "col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                            <dd class = "col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                            <dt class = "col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                            <dd class = "col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-block">
                             <a asp-action="Index" class="btn btn-light text-secondary px-4 me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger px-4">Delete Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
