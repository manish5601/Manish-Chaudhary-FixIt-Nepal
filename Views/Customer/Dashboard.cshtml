@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="text-center mt-5">
    <h1 class="text-primary">Customer Dashboard</h1>
    <p>Find services, manage your bookings, and view your history.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <h5>Book a Service</h5>
                <p>Find and book a professional</p>
                <a href="#" class="btn btn-primary">Book Now</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <h5>My Bookings</h5>
                <p>View current and past bookings</p>
                <a href="#" class="btn btn-outline-primary">View</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <h5>Profile</h5>
                <p>Update your details</p>
                <a href="#" class="btn btn-outline-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
