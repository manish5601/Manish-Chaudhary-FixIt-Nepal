@using FixItNepal.Models
@{
    ViewData["Title"] = "Provider Dashboard";
    var status = (VerificationStatus)ViewBag.Status;
}

<div class="container py-5">
    <!-- Status Banner -->
    @if (status == VerificationStatus.Pending)
    {
        <div class="alert alert-warning border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-hourglass-split fs-2 me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Verification Pending</h5>
                    <p class="mb-0">Your account is currently under review by our admin team. You will be notified once approved.</p>
                </div>
            </div>
        </div>
    }
    else if (status == VerificationStatus.Approved)
    {
         <div class="alert alert-success border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-2 me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Account Verified</h5>
                    <p class="mb-0">You are live! Customers can now see your profile and book your services.</p>
                </div>
            </div>
        </div>
    }
    else if (status == VerificationStatus.Rejected)
    {
         <div class="alert alert-danger border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-x-circle-fill fs-2 me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Verification Rejected</h5>
                    <p class="mb-0">Please update your profile and documents to request a re-review.</p>
                </div>
            </div>
        </div>
    }


    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-calendar-check fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Bookings</h5>
                    <p class="text-muted small">Manage incoming requests</p>
                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-outline-primary btn-sm rounded-pill w-100 stretched-link">View Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-person-badge fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Profile</h5>
                    <p class="text-muted small">Update skills & info</p>
                    <a asp-controller="ServiceProvider" asp-action="Profile" class="btn btn-outline-primary btn-sm rounded-pill w-100 stretched-link">Edit Profile</a>
                </div>
            </div>
        </div>
         <div class="col-md-3">
             <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-clock-history fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Availability</h5>
                    <p class="text-muted small">Set working hours</p>
                     <!-- Placeholder until Availability UI is separate, using Profile for now or we can add a link later -->
                    <button class="btn btn-outline-secondary btn-sm rounded-pill w-100" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-wallet2 fs-1 text-primary mb-3"></i>
                    <h5 class="fw-bold">Earnings</h5>
                    <p class="text-muted small">Track your income</p>
                    <button class="btn btn-outline-secondary btn-sm rounded-pill w-100" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
    </div>
</div>
