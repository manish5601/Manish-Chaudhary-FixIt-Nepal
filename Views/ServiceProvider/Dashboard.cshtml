@{
    ViewData["Title"] = "Service Dashboard";
}

<div class="container text-center mt-5">
    <h1 class="text-primary-custom mb-3">Service Provider Dashboard</h1>
    
    @if (ViewBag.Status == FixItNepal.Models.VerificationStatus.Pending)
    {
        <div class="alert alert-warning border-0 shadow-sm mx-auto" style="max-width: 600px;">
            <div class="d-flex align-items-center justify-content-center gap-3">
                <i class="bi bi-hourglass-split fs-1 text-warning"></i>
                <div class="text-start">
                    <h5 class="alert-heading fw-bold mb-1">Account Verification Pending</h5>
                    <p class="mb-0">Your profile is currently under review. <br />You will be able to access the dashboard once an administrator approves your account.</p>
                </div>
            </div>
        </div>
    }
    else if (ViewBag.Status == FixItNepal.Models.VerificationStatus.Rejected)
    {
        <div class="alert alert-danger border-0 shadow-sm mx-auto" style="max-width: 600px;">
            <div class="d-flex align-items-center justify-content-center gap-3">
                <i class="bi bi-x-circle fs-1 text-danger"></i>
                <div class="text-start">
                    <h5 class="alert-heading fw-bold mb-1">Account Rejected</h5>
                    <p class="mb-0">Your application has been rejected. Please contact support or update your profile details.</p>
                </div>
            </div>
             <div class="mt-3">
                 <a href="/ServiceProvider/Profile" class="btn btn-outline-danger">Update Profile</a>
             </div>
        </div>
    }
    else if (ViewBag.Status == FixItNepal.Models.VerificationStatus.Approved)
    {
        <p class="text-secondary mb-5">Manage your jobs, update availability, and track earnings.</p>

        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition-all p-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-primary-subtle text-primary rounded-circle mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-briefcase fs-3"></i>
                    </div>
                    <h5 class="fw-bold">New Jobs</h5>
                    <p class="text-muted small">View and accept available job requests in your area.</p>
                    <a href="#" class="btn btn-primary rounded-pill mt-auto w-100">View Jobs</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition-all p-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-success-subtle text-success rounded-circle mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-calendar-check fs-3"></i>
                    </div>
                    <h5 class="fw-bold">My Schedule</h5>
                    <p class="text-muted small">Manage your upcoming appointments and working hours.</p>
                    <a href="#" class="btn btn-outline-success rounded-pill mt-auto w-100">Calendar</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow transition-all p-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-info-subtle text-info rounded-circle mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-wallet2 fs-3"></i>
                    </div>
                    <h5 class="fw-bold">Earnings</h5>
                    <p class="text-muted small">Track your income and transaction history.</p>
                    <a href="#" class="btn btn-outline-info rounded-pill mt-auto w-100">View Earnings</a>
                </div>
            </div>
        </div>
    }
</div>
