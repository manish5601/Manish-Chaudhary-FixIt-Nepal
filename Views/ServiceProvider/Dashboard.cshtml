@{
    ViewData["Title"] = "Service Dashboard";
}

<div class="text-center mt-5">
    <h1 class="text-primary">Service Provider Dashboard</h1>
    <p>Manage your jobs, update availability, and track earnings.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <h5>New Jobs</h5>
                <p>View and accept job requests</p>
                <a href="#" class="btn btn-primary">View Jobs</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <h5>My Schedule</h5>
                <p>Manage your working hours</p>
                <a href="#" class="btn btn-outline-primary">Calendar</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 text-center">
                <h5>Earnings</h5>
                <p>Track your income</p>
                <a href="#" class="btn btn-outline-primary">View</a>
            </div>
        </div>
    </div>
</div>
